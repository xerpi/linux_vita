menuconfig ARCH_VITA
	bool "PlayStation Vita"
	depends on MMU
	select CPU_V7
	select HAVE_SMP
	select HAVE_ARM_SCU
	select CACHE_L2X0
	select TIMER_OF
	select COMMON_CLK
	select GENERIC_CLOCKEVENTS
	select GENERIC_IRQ_MULTI_HANDLER
	select SPARSE_IRQ
	select USE_OF
	select ARM_GIC
	help
	  Support for the Sony PlayStation Vita gaming console
